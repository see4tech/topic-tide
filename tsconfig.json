{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "esnext", // Ensures compatibility with ES modules
    "moduleResolution": "node", // Required for Node.js modules
    "target": "esnext", // Ensures modern JavaScript features
    "allowSyntheticDefaultImports": true, // Allows default imports for CommonJS modules
    "esModuleInterop": true, // Enables compatibility between ES Modules and CommonJS
    "resolveJsonModule": true, // Enables importing JSON files
    "skipLibCheck": true, // Skips type checking of declaration files
    "strict": true, // Enables all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforces case-sensitive module resolution
    "isolatedModules": true, // Ensures each file can be treated as a module
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}